<h2>Friend list<h2>


<div class="container">
  <div class="row">

    <% @ffriends.each do |friend| %>
      <div class="col-md-3 col-sm-4 col-xs-6 text-center user-item">

        <%= link_to user_path(friend) do %>
          <%= image_tag(friend.avatar, class: "img-rounded") %>
          <h4><%= friend.name %></h4>
        <% end %>

      </div>
    <% end %>

  </div>
</div>
